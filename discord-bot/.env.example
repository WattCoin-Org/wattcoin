# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Optional: Discord Guild ID for testing
DISCORD_GUILD_ID=

# Command prefix for text commands (default: !)
COMMAND_PREFIX=!

# WattCoin API
WATTCOIN_API_URL=https://wattcoin.org/api/v1
WATTCOIN_API_KEY=your_api_key_if_available

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
WATT_MINT=your_watt_token_mint_address

# Alerts
ALERT_CHECK_INTERVAL=60
MAX_ALERTS_PER_USER=5

# Database
DATABASE_URL=sqlite:///wattcoin_bot.db
